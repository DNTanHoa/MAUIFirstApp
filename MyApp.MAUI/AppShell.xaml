<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyApp.MAUI"
    xmlns:view="clr-namespace:MyApp.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Bài viết"
                      Icon="rss.png"
                      ContentTemplate="{DataTemplate view:BlogPage}"
                      Route="MainPage" />
        <ShellContent Title="Tiện ích"
                      Icon="dashboard.png"
                      ContentTemplate="{DataTemplate view:HomePage}"
                      Route="MainPage" />
        <ShellContent Title="L.Vạn niên"
                      Icon="calendar.png"
                      ContentTemplate="{DataTemplate view:CalendarPage}"
                      Route="MainPage" />
        <ShellContent Title="Cộng đồng"
                      Icon="chat.png"
                      ContentTemplate="{DataTemplate view:ForumPage}"
                      Route="MainPage" />
        <ShellContent Title="Tài khoản"
                      Icon="user.png"
                      ContentTemplate="{DataTemplate view:UserPage}"
                      Route="MainPage" />
    </FlyoutItem>
</Shell>
